<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <description>EmailAlertOnPatchDeployment</description>
        <fullName>Flosum__EmailAlertOnPatchDeployment</fullName>
        <protected>false</protected>
        <recipients>
            <field>LastModifiedById</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Flosum__Flosum/Flosum__PatchDeployTemplate</template>
    </alerts>
    <alerts>
        <description>EmailAlertOnPatchValidate</description>
        <fullName>Flosum__EmailAlertOnPatchValidate</fullName>
        <protected>false</protected>
        <recipients>
            <field>LastModifiedById</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Flosum__Flosum/Flosum__PatchValidateTemplate</template>
    </alerts>
    <alerts>
        <description>EmailAlertOnTestExecution</description>
        <fullName>Flosum__EmailAlertOnTestExecution</fullName>
        <protected>false</protected>
        <recipients>
            <field>LastModifiedById</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Flosum__Flosum/Flosum__TestExecutionTemplate</template>
    </alerts>
    <rules>
        <actions>
            <name>Flosum__EmailAlertOnPatchDeployment</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND( ISBLANK(Flosum__Build__c) ,  Flosum__Job_Completed__c ,   OR( TEXT( Flosum__Process_Type__c) = &apos;Deployment&apos;,  TEXT( Flosum__Process_Type__c) = &apos;Rollback (Deployment)&apos;,  TEXT( Flosum__Process_Type__c) = &apos;Schedule Deployment&apos;), TEXT(Flosum__Status__c) != &apos;Did Not Run&apos;)</formula>
        <fullName>Flosum__OnPatchDeployment</fullName>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <actions>
            <name>Flosum__EmailAlertOnPatchValidate</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Flosum__Metadata_Log__c.Flosum__Process_Type__c</field>
            <operation>equals</operation>
            <value>Validate,Rollback (Validate)</value>
        </criteriaItems>
        <criteriaItems>
            <field>Flosum__Metadata_Log__c.Flosum__Job_Completed__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Flosum__Metadata_Log__c.Flosum__Status__c</field>
            <operation>notEqual</operation>
            <value>Did Not Run</value>
        </criteriaItems>
        <fullName>Flosum__OnPatchValidate</fullName>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <actions>
            <name>Flosum__EmailAlertOnTestExecution</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Flosum__Metadata_Log__c.Flosum__Process_Type__c</field>
            <operation>equals</operation>
            <value>Test Execution</value>
        </criteriaItems>
        <criteriaItems>
            <field>Flosum__Metadata_Log__c.Flosum__Job_Completed__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <fullName>Flosum__OnTestExecution</fullName>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
