<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <description>EmailAlertOnPeerReviewerInsert</description>
        <fullName>Flosum__EmailAlertOnPeerReviewerInsert</fullName>
        <protected>false</protected>
        <recipients>
            <field>Flosum__User__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Flosum__Flosum/Flosum__PeerReviewerInsert</template>
    </alerts>
    <alerts>
        <description>EmailAlertOnReviewerApprove</description>
        <fullName>Flosum__EmailAlertOnReviewerApprove</fullName>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Flosum__Flosum/Flosum__PullRequestApprovedByReviewer</template>
    </alerts>
    <alerts>
        <description>EmailAlertOnReviewerReject</description>
        <fullName>Flosum__EmailAlertOnReviewerReject</fullName>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Flosum__Flosum/Flosum__PullRequestRejectedByReviewer</template>
    </alerts>
    <rules>
        <actions>
            <name>Flosum__EmailAlertOnReviewerApprove</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Flosum__Pull_Request_Reviewer__c.Flosum__Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <fullName>Flosum__OnReviewerApprove</fullName>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <actions>
            <name>Flosum__EmailAlertOnReviewerReject</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Flosum__Pull_Request_Reviewer__c.Flosum__Status__c</field>
            <operation>equals</operation>
            <value>Reject</value>
        </criteriaItems>
        <fullName>Flosum__OnReviewerReject</fullName>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
